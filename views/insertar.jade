                                  .col-sm-4
                                    label.titulos(for='ticket') Fecha Alta:
                                  .col-sm-7
                                    input#fechaA.form-control(type='date', placeholder='Fecha Alta', value='', name='fechaA' format="yyyy/MM/dd")
                        .grupo
                          row.col-sm-12.offset-sm-6
                            row.form-group
                              row.col-sm-4.offset-sm-2
                                button#submitButtonInsert.btn.btn-primary(type='button') Confirmar
                              row.col-sm-4.offset-sm-2
                                button#cancelButton.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
