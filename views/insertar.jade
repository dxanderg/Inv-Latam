                          #tab_1.tab-pane.active
                            .grupo
                              .col-sm-12
                                row.form-group
                                  .col-sm-3
                                    label.titulos(for='tipoactivo') Tipo de Activo :
                                  .col-sm-3
                                    select#selectTipoE.form-control(name='cod_tipo_equip')
