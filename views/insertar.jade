                                      for val in consulta1
                                        option(value=val.cod_marca)= val.nombre_marca
                              row.col-sm-6
                                row.form-group
                                  .col-sm-4
                                    label.titulos(for='modelo') Modelo :
                                  .col-sm-7
                                    select#selectModelo.form-control(name='modelo')
                                      option(value='') Seleccione un Opcion
                            .grupo
                              row.col-sm-6
                                row.form-group
                                  .col-sm-4
                                    label.titulos(for='plaqueta') plaqueta :
                                  .col-sm-7
                                    input#plaqueta.form-control(type='text', placeholder='Numero Plaqueta', value='', name='plaqueta')
                              row.col-sm-6
                                row.form-group
                                  .col-sm-4
                                    label.titulos(for='serial') serial :
                                  .col-sm-7
                                    input#serial.form-control(type='text', placeholder='Numero Serial', value='', name='serial')
                            .grupo
                              row.col-sm-6
                                row.form-group
                                  .col-sm-4
                                    label.titulos(for='cpu') CPU :
                                  .col-sm-7
                                    input#cpu.form-control(type='text', placeholder='Procesador', value='', name='cpu')
                              row.col-sm-6
                                row.form-group
                                  .col-sm-4
                                    label.titulos(for='ram') RAM :
                                  .col-sm-7
                                    input#ram.form-control(type='text', placeholder='Memoria RAM', value='', name='ram')
                            .grupo
                              row.col-sm-6
